# Flask Configuration
FLASK_APP=highland_admin_portal/run.py
FLASK_ENV=development

# Security - IMPORTANT: Generate a secure secret key
# Run: python highland_admin_portal/generate_secret_key.py
SECRET_KEY=your-secret-key-here-change-this

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///admin_portal_dev.db

# Production (PostgreSQL example - uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost/admin_portal

# Production (MySQL example - uncomment and configure)
# DATABASE_URL=mysql+pymysql://username:password@localhost/admin_portal

# Session Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# Email Configuration (for future email features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password

# Optional: Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
